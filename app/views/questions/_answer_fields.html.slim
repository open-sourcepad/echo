.form-group.answer-group
  .col-md-8.no-padding
    = text_field_tag "question[answers_attributes][#{@random_number}][description]", '', class: 'form-control input-lg', placeholder: 'Answer'
  .col-md-3.no-padding-right
    = link_to 'Upload Image', 'javascript:void(0)', class: 'btn btn-default input-lg upload-image'
    = file_field_tag "question[answers_attributes][#{@random_number}][image]", class: 'hidden'
  .col-md-1
    = link_to '<i class="fa fa-times fa-3x"></i>'.html_safe, 'javascript:void(0)', class: 'remove-answer'
  .clearfix

